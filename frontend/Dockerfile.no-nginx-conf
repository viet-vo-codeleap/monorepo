# Stage 1: Build
FROM node:22-alpine AS build

WORKDIR /app

COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

# Stage 2: Serve (WITHOUT custom nginx.conf)
FROM nginx:alpine

# Using DEFAULT nginx config - no SPA routing!
COPY --from=build /app/dist/deploy-angular-app/browser /usr/share/nginx/html

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
