  build-docker-apps:
    uses: ./.github/workflows/rw-build-docker-apps.yml
    with:
      push: true
    secrets: inherit

  deploy:
    runs-on: ubuntu-latest
    needs: build-docker-apps
    if: needs.build-docker-apps.result == 'success'
    steps:
      - name: Deploy to Azure VM
        uses: appleboy/ssh-action@v1.0.3
        env:
          ACR_LOGIN_SERVER: ${{ secrets.ACR_LOGIN_SERVER }}
          ACR_NAME: ${{ secrets.ACR_NAME }}
          IMAGE_TAG: ${{ needs.build-docker-apps.outputs.image_tag }}
        with:
          host: ${{ secrets.VM_HOST }}
          username: ${{ secrets.VM_USERNAME }}
          password: ${{ secrets.VM_PASSWORD }}
          envs: ACR_LOGIN_SERVER,ACR_NAME,IMAGE_TAG
          script: |
            az login --identity
            az acr login --name $ACR_NAME

            cd /home/vietvo/monorepo
            yq -i ".services.angular-app.image = \"$ACR_LOGIN_SERVER/sample-angular-19:$IMAGE_TAG\"" docker-compose.yml
            yq -i ".services.dotnet-app.image = \"$ACR_LOGIN_SERVER/sample-dotnet-8:$IMAGE_TAG\"" docker-compose.yml
            
            docker compose down
            docker compose up -d
            echo "Deployment complete with tag: $IMAGE_TAG"