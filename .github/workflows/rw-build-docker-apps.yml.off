name: RW - Build Docker Apps

on:
  workflow_call:
    inputs:
      push:
        description: 'Push images to ACR'
        required: true
        type: boolean
    outputs:
      image_tag:
        description: 'Image tag'
        value: ${{ jobs.build_frontend.outputs.image_tag || jobs.build_backend.outputs.image_tag }}
    secrets:
      AZURE_CREDENTIALS:
        required: true
      ACR_NAME:
        required: true
      ACR_LOGIN_SERVER:
        required: true


env:
  ANGULAR_IMAGE: sample-angular-19
  DOTNET_IMAGE: sample-dotnet-8

jobs:
  build_frontend:
    runs-on: ubuntu-latest
    outputs:
      image_tag: ${{ steps.meta.outputs.sha }}
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Get commit SHA
        id: meta
        run: echo "sha=${GITHUB_SHA::7}" >> $GITHUB_OUTPUT

      - name: Login to Azure and ACR
        uses: ./.github/actions/acr-login
        with:
          azure-credentials: ${{ secrets.AZURE_CREDENTIALS }}
          acr-name: ${{ secrets.ACR_NAME }}
      #   uses: azure/login@v2
      #   with:
      #     creds: ${{ secrets.AZURE_CREDENTIALS }}

      # - name: Login to ACR
      #   run: az acr login --name ${{ secrets.ACR_NAME }}

      - name: Build and push Angular image
        uses: docker/build-push-action@v5
        with:
          context: ./frontend
          push: true
          platforms: linux/amd64
          tags: |
            ${{ secrets.ACR_LOGIN_SERVER }}/${{ env.ANGULAR_IMAGE }}:${{ steps.meta.outputs.sha }}
            ${{ secrets.ACR_LOGIN_SERVER }}/${{ env.ANGULAR_IMAGE }}:latest
  build_backend:
    runs-on: ubuntu-latest
    outputs:
      image_tag: ${{ steps.meta.outputs.sha }}
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Get commit SHA
        id: meta
        run: echo "sha=${GITHUB_SHA::7}" >> $GITHUB_OUTPUT

      - name: Login to Azure and ACR
        uses: ./.github/actions/acr-login
        with:
          azure-credentials: ${{ secrets.AZURE_CREDENTIALS }}
          acr-name: ${{ secrets.ACR_NAME }}

      - name: Build and push .NET image
        uses: docker/build-push-action@v5
        with:
          context: ./backend
          push: true
          platforms: linux/amd64
          tags: |
            ${{ secrets.ACR_LOGIN_SERVER }}/${{ env.DOTNET_IMAGE }}:${{ steps.meta.outputs.sha }}
            ${{ secrets.ACR_LOGIN_SERVER }}/${{ env.DOTNET_IMAGE }}:latest